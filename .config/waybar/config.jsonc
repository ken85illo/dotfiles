{
    "layer": "top",
    "margin-top": 10,
    "margin-left": 10,
    "margin-right": 10,
    "reload_style_on_change": true,
    "modules-left": [
        "custom/archicon",
        "clock",
        "hyprland/window",
        "mpris"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "power-profiles-daemon",
        "idle_inhibitor",
        "cpu",
        "temperature",
        "memory",
        "backlight",
        "network",
        "bluetooth",
        "pulseaudio",
        "battery"
